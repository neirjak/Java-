#1. Print and strings
print('Single quotes')
print("double quotes")
print('can do this', 5)
#To join strings, use ","

#Escape character \ will take away characteristics from a sign and just leave the visual
print('you\'ll have success here')
print("you'll have success here too")

#2. Math
print(1+3)
print(4*4)
print(5/2)

#3. Variables
exvar = 55
print(exvar)
canDo = "Hey!"
print(canDo)
opera = 5/4
print(opera)
#Python has e.g. the variable types string, integer and double

#4. While Loop
condition = 1
while condition < 10:
        print(condition)
        condition += 1

#5. For Loop
list = [1,5,6,6,2,1,5,2,1]
for x in list:
    print(x)
for x in range(1,12):
    print(x)

#6. If statement
x = 5
y = 10
if x > y:
    print("x is greater than y")
x = 5
y = 10
if x < y:
    print('x is less than y')

#7. If else
x = 5
y = 8
if x > 55:
    print('x is greater than 55')
else:
    print('x is not greater than 55')

#8. If Elif else
x = 5
x = 10
z = 22
if x > y:
    print('x is greater than y')
elif x < z:
    print('x is greater than z')
else:
    print('if and elif never ran...')

#9. Functions
def example():
    print('this code will run')
    z = 3+9
    print(z)
example()

#10. Function parameters
def simple_addition(num1,num2):
    answer = num1 + num2
    print('num1 is', num1)
    print(answer)
simple_addition(5,3)
simple_addition(num2=3, num1=5)

#11. Function parameter defaults
def simple(num1, num2=5):
    pass
def basic_window(width, height, font='TNR'):
    #Let us just print out everything
    print(width, height, font)
basic_window(350,500)
basic_window(350,500,600)
